{
  "name": "domain-scanner-cli",
  "description": "The command line module for domain-scanner.",
  "version": "0.0.4",
  "homepage": "https://b4dnewz.github.io/domain-scanner/",
  "author": {
    "name": "b4dnewz",
    "email": "filippo@codekraft.it",
    "url": "https://b4dnewz.github.io/"
  },
  "repository": "b4dnewz/domain-scanner-cli",
  "license": "MIT",
  "bin": {
    "domain-scanner": "lib/cmd.js"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "domain-scanner",
    "cli-tool"
  ],
  "dependencies": {
    "chalk": "^2.3.2",
    "commander": "^2.15.0",
    "domain-scanner": "0.1.2",
    "lodash": "^4.17.5",
    "ora": "^3.0.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-xo": "^0.24.1",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "lec": "^1.0.1",
    "lint-staged": "^7.2.2",
    "prettier": "^1.11.1"
  },
  "scripts": {
    "prepublish": "lec lib/cmd.js -c LF",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ],
      "no-useless-escape": [
        "off"
      ]
    },
    "plugins": [
      "prettier"
    ]
  }
}

{
  "name": "domain-scanner-cli",
  "version": "0.0.3",
  "description": "The command line module for domain-scanner.",
  "homepage": "",
  "author": {
    "name": "b4dnewz",
    "email": "filippo@codekraft.it",
    "url": "https://b4dnewz.github.io/"
  },
  "files": ["lib"],
  "keywords": ["domain-scanner", "cli-tool"],
  "devDependencies": {
    "coveralls": "^3.0.0",
    "nsp": "^3.2.1",
    "eslint": "^4.18.2",
    "prettier": "^1.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-config-xo": "^0.20.1",
    "lec": "^1.0.1"
  },
  "scripts": {
    "prepublish": "lec lib/cmd.js -c LF && nsp check --warn-only",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ],
      "no-useless-escape": ["off"]
    },
    "plugins": ["prettier"]
  },
  "repository": "b4dnewz/domain-scanner-cli",
  "bin": {
    "domain-scanner": "lib/cmd.js"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "commander": "^2.15.0",
    "domain-scanner": "0.1.2",
    "lodash": "^4.17.5",
    "ora": "^2.0.0"
  },
  "license": "MIT"
}

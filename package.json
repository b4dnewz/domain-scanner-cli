{
  "name": "domain-scanner-cli",
  "version": "0.0.1",
  "description": "The command line module for domain-scanner.",
  "homepage": "",
  "author": {
    "name": "b4dnewz",
    "email": "filippo@codekraft.it",
    "url": "https://b4dnewz.github.io/"
  },
  "files": ["lib"],
  "keywords": ["domain-scanner", "cli-tool"],
  "devDependencies": {
    "coveralls": "^3.0.0",
    "nsp": "^3.1.0",
    "eslint": "^4.11.0",
    "prettier": "^1.8.2",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "eslint-config-prettier": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-config-xo": "^0.19.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "lec": "^1.0.1"
  },
  "scripts": {
    "prepublish": "lec lib/index.js -c LF && nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ],
      "no-useless-escape": ["off"]
    },
    "plugins": ["prettier"]
  },
  "repository": "b4dnewz/domain-scanner-cli",
  "jest": {
    "testEnvironment": "node"
  },
  "bin": {
    "domain-scanner": "lib/index.js"
  },
  "dependencies": {
    "commander": "^2.12.1",
    "domain-scanner": "0.0.7"
  },
  "license": "MIT"
}
